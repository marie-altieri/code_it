<div id="message-<%= message.id %>" class="<%= message.user.role.downcase %>">
  <%= cl_image_tag message.user.photo.key, class: "chat-photo" %>
  <small>
    <strong><%= message.user.full_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
