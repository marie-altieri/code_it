<div class="container">
  <h2>Projects</h2>

  <h4>My pending projects...</h4>
  <% @pending_projects.each do |project| %>
    <div>
      <p><strong>Name: </strong><%= project.name %></p>
      <p><strong>Description: </strong><%= project.description %></p>
      <p><strong>Deadline: </strong><%= project.deadline.strftime("%d/%m/%Y") %></p>
      <p><strong>Status: </strong><%= project.status %></p>

      <p><%= link_to "See more about this project", coders_project_path(project) %></p>

      <%= link_to "Decline", coders_project_path(project), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <%= link_to "Accept", coders_project_path(project), data: {turbo_method: :patch, turbo_confirm: "Are you sure?"} %>
      <p></p>
    </div>
  <% end %>
  <h4>My current projects</h4>
  <% @accepted_projects.each do |project| %>
    <div>
      <p><strong>Name: </strong><%= project.name %></p>
      <p><strong>Description: </strong><%= project.description %></p>
      <p><strong>Deadline: </strong><%= project.deadline %></p>
      <p><strong>Status: </strong><%= project.status %></p>

      <p><%= link_to "See more about this project", coders_project_path(project) %></p>
    </div>

  <% end %>
</div>
