<div class="container-sign">
  <div class="form-sign">
       <%= image_tag "Logo.png", alt: "logo", class: "img-sign" %>

    <h2 class="title-sign">Create your profile</h2>
<p>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :first_name,
                require: true,
                autofocus: true,
                placeholder: "What is your first name?",
                input_html: { autocomplete: "first name" }%>

    <%= f.input :last_name,
                require: true,
                autofocus: true,
                placeholder: "What is your last name?",
                input_html: { autocomplete: "Last name" }%>

    <%= f.input :username,
                required: true,
                autofocus: true,
                # label: false,
                placeholder: "Choose a username",
                input_html: { autocomplete: "username" }%>

    <%= f.input :email,
                required: true,
                autofocus: true,
                # label: false,
                placeholder: "What is your email?",
                input_html: { autocomplete: "email" }%>

    <%= f.input :role,
                require: false,
                autofocus: true,
                # label: false,
                placeholder: "Are you a coder or a company?",
                input_html: { autocomplete: "coders or companies" }%>

    <%= f.input :language,
                require: false,
                autofocus: true,
                # label: false,
                placeholder: "What are your language skills?",
                input_html: { autocomplete: "for coders only" }%>

    <%= f.input :years_of_experience,
                required: false,
                autofocus: true,
                # label: false,
                placeholder: "How many years of experience do you have?",
                input_html: { autocomplete: "years_of_experience" }%>

    <%= f.input :description,
                required: false,
                autofocus: true,
                # label: false,
                placeholder: "Tell us something about yourself!",
                input_html: { autocomplete: "description about yourself" }%>

    <%= f.input :experience,
                required: false,
                autofocus: true,
                # label: false,
                placeholder: "Tell us about your experience",
                input_html: { autocomplete: "experience" }%>

    <%= f.input :availability,
                required: true,
                autofocus: true,
                placeholder: "Please tell us whenever you are free for a job!",
                input_html: { autocomplete: "availability" }%>

    <%= f.input :photo, as: :file, required: true, autofocus: true %>

    <%= f.input :password,
                required: true,
                placeholder: "••••••••",
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>

    <%= f.input :password_confirmation,
                required: true,
                placeholder: "••••••••",
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", id: "submit-button-sign" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
