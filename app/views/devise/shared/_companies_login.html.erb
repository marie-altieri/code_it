<div id="container-company">

  <div class="login_comp">
      <h2 class="company_title">Welcome Back</h2>
      <h3 class="login_company">Find your perfect match</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
      </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <div class="form-actions">
      <%= f.button :submit, "Log in", id: "submit-button-login"%>
    </div>
    <% end %>
    <div class= "company-sup">
      <%= render "devise/shared/links"%>
    </div>
   </div>
  <div class="img_comp">
    <%= image_tag "Company.png", alt: "logo", id: "image_company"%>
  </div>
</div>
