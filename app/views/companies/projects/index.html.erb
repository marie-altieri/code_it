<div class="container">
    <h2 class= "company-project-title">My company's projects</h2>
    <div class="company-project-box">
      <% @projects.each do |project| %>
      <div class="box-indiv">
          <h4 class="company-project-first"><%= project.name %></h4>
          <p class="company-project-first"><strong>Description: </strong><%= project.description %></p>
          <p class="company-project-text"><strong>Deadline: </strong><%= project.deadline.strftime("%d/%m/%Y")  %></p>
          <p class="company-project-text"><strong>Assigned coder: </strong><%= project.coder.full_name %></p>
          <p class="company-project-text"><strong>Status: </strong><%= project.status %></p>
      </div>
    <% end %>
    </div>
  </div>
</div>
