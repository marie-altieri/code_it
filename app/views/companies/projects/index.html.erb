<div class="container-index-projects">
    <h2 class= "company-project-title">My company's projects</h2>
    <div class="company-project-box">
      <% @projects.each do |project| %>

      <% case project.status %>
        <% when "Pending" %>
        <% status_class = "status-pending" %>

        <% when "Approved" %>
        <% status_class = "status-approved" %>
      <% end %>

      <div class="box-indiv">
        <div class="picture-name-project">
          <%= cl_image_tag project.coder.photo.key, crop: :fill, class: "image-company-index-project"%>
          <h4 class="company-project-first-name"><%= project.name %></h4>
        </div>

          <p class="company-project-first" id="foufou"><strong>Description: </strong><%= project.description %></p>
          <p class="company-project-text"><strong>Deadline: </strong><%= project.deadline.strftime("%d/%m/%Y")  %></p>
          <p class="company-project-text"><strong>Assigned coder: </strong><%= project.coder.full_name %></p>
          <div class="status-item">
            <p class="company-project-text <%= status_class %>"><strong>Status: </strong><%= project.status %></p>
          </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
